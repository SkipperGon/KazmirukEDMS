@page
@model KazmirukEDMS.Pages.Documents.IndexModel
@{
    ViewData["Title"] = "Документы";
}

<h1>Документы</h1>

<p><a asp-page="Create" class="btn btn-primary">Создать документ</a></p>

<table class="table">
    <thead>
        <tr>
            <th>Название</th>
            <th>Рег. номер</th>
            <th>Статус</th>
            <th>Создан</th>
            <th>Создал</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var d in Model.Paged.Items)
    {
        <tr>
            <td>@d.Title</td>
            <td>@d.RegistrationNumber</td>
            <td>@d.Status</td>
            <td>@d.CreatedAt.ToLocalTime()</td>
            <td>@d.CreatedById</td>
            <td><a asp-page="Details" asp-route-id="@d.Id">Открыть</a> | <a asp-page="Edit" asp-route-id="@d.Id">Изменить</a> | <a asp-page="Delete" asp-route-id="@d.Id">Удалить</a></td>
        </tr>
    }
    </tbody>
</table>

<nav>
    <ul class="pagination">
        @for (int i = 1; i <= Math.Ceiling((double)Model.Paged.TotalCount / Model.Paged.PageSize); i++)
        {
            <li class="page-item @(i == Model.Paged.Page ? "active" : "")"><a class="page-link" asp-route-page="@i">@i</a></li>
        }
    </ul>
</nav>
