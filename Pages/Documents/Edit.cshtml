@page "{id:guid}"
@model KazmirukEDMS.Pages.Documents.EditModel
@{
    ViewData["Title"] = "Edit document";
}

<h1>Edit document</h1>

<form method="post">
    <div class="mb-3">
        <label class="form-label">Title</label>
        <input asp-for="Input.Title" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Registration number</label>
        <input asp-for="Input.RegistrationNumber" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Status</label>
        <select asp-for="Input.Status" class="form-select">
            <option value="">-- select --</option>
            <option value="0">Draft</option>
            <option value="1">UnderReview</option>
            <option value="2">Approved</option>
            <option value="3">Rejected</option>
            <option value="4">Archived</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

<p><a asp-page="Details" asp-route-id="@Model.Id">Back</a></p>
